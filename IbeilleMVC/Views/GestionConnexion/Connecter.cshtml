@model IbeilleMVC.ViewModels.ConnexionVM

@{
    ViewBag.Title = "Connecter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Connecter</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ConnexionVM</h4>
        @ViewBag.Information
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Pseudo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pseudo)
                @Html.ValidationMessageFor(model => model.Pseudo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mdp, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mdp)
                @Html.ValidationMessageFor(model => model.Mdp)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Connecter" class="btn btn-default" /><br />
                @Html.ActionLink("Nouvel utilisateur", "SEnregistrer")
            </div>
        </div>
    </div>
}
