@model IbeilleMVC.Models.Inscrit

@{
    ViewBag.Title = "SEnregistrer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SEnregistrer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inscrit</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Pseudo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pseudo)
                @Html.ValidationMessageFor(model => model.Pseudo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom)
                @Html.ValidationMessageFor(model => model.Nom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prenom, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prenom)
                @Html.ValidationMessageFor(model => model.Prenom)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateInscription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateInscription)
                @Html.ValidationMessageFor(model => model.DateInscription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateDerniereConnexion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateDerniereConnexion)
                @Html.ValidationMessageFor(model => model.DateDerniereConnexion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdresseMail, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdresseMail)
                @Html.ValidationMessageFor(model => model.AdresseMail)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MotDePasse, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MotDePasse)
                @Html.ValidationMessageFor(model => model.MotDePasse)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="checkbox" name="typeInscrit" value="vendeur" />Vendeur<br />
                <input type="checkbox" name="typeInscrit" value="encherisseur" />Enchérisseur
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Connecter")
</div>
